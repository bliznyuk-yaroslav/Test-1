datasource db {
  provider = "sqlite" // або "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Quiz {
  id        Int       @id @default(autoincrement())
  title     String
  questions Question[]
  createdAt DateTime  @default(now())
}

model Question {
  id        Int       @id @default(autoincrement())
  quiz      Quiz      @relation(fields: [quizId], references: [id])
  quizId    Int
  type      QuestionType
  text      String
  options   String?   // JSON string для checkbox варіантів
  createdAt DateTime  @default(now())
}

enum QuestionType {
  BOOLEAN
  INPUT
  CHECKBOX
  TEXT
}